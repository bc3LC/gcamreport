final_year = 2100
desired_variables = 'All'

run(db_path = db_path, db_name = db_name, prj_name = prj_name, scenarios = scenarios,
    desired_regions = desired_regions, final_year = final_year)


project_path = 'C:\\GCAM_working_group\\IAM COMPACT\\gcam7-IAMCOMPACT\\output\\database_basexdb_2100_iam_compact_EU12_EU15_v5.dat'
